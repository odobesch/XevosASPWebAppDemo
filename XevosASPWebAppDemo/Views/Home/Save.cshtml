@model XevosASPWebAppDemo.Models.Employee

<h2>Edit employee</h2>
@using (Html.BeginForm("save", "home", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.Id > 0)
    {
        @Html.HiddenFor(x => x.Id)
    }

    <div class="form-group">
        <label>First Name</label>
        @Html.TextBoxFor(x => x.Jmeno, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Jmeno, null, new { @class = "field-validation-error" })
    </div>
    <div class="form-group">
        <label>Last Name</label>
        @Html.TextBoxFor(x => x.Prijmeni, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Prijmeni, null, new { @class = "field-validation-error" })
    </div>
    <br />
    <div class="form-group">
        <label>Work Begin Date</label><br />
        @Html.TextBoxFor(x => x.Date, new { @type = "date" })<br />
        @Html.ValidationMessageFor(x => x.Date, null, new { @class = "field-validation-error" })
    </div>
    <br />
    <div>
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
}
